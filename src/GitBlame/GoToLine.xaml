<Window x:Class="GitBlame.GoToLine"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Go To Line" Height="140" Width="300">
	
	<Grid>
		<StackPanel Margin="10">
			<Label x:Name="Caption" Padding="0, 4"  Content="Line number (1–100):" />
			<TextBox x:Name="LineNumber" Text="50" />
			<StackPanel Margin="0,8" Orientation="Horizontal" HorizontalAlignment="Right">
				<Button Margin="4,0" Padding="4,4" Width="80" Content="OK" IsDefault="True" Click="OnGoToLine"/>
				<Button Margin="4,0,0,0" Padding="4,4" Width="80" Content="Cancel" IsCancel="True"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</Window>
